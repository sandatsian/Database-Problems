@model IEnumerable<BDProblems.Theme>

@{
    ViewData["Title"] = "Задачі за темами";
}

    <h1>Задачі за темою @ViewBag.ThemeName</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.ThemeId">Додати нову тему</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThemeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ThemeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Задачі</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
