@model BDProblems.ProblemTheme

@{
    ViewData["Title"] = "Create";
}

    <p><h1>Create</h1></p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.ProblemId" name="id" />
            <div class="form-group">
                <label asp-for="ThemeId" class="control-label"></label>
                <select asp-for="ThemeId" class ="form-control" asp-items="ViewBag.ThemeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id ="@Model.ProblemId">Back to Problem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
