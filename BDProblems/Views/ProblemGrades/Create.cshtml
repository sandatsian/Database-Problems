@model BDProblems.ProblemGrade

@{
    ViewData["Title"] = "Create";
}

<p><h1>Create</h1></p>

<h4>Problem's Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.ProblemId" name="id" />
            <div class="form-group">
                <label asp-for="GradeId" class="control-label"></label>
                <select asp-for="GradeId" class ="form-control" asp-items="@ViewBag.GradeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to problem", "Details", "Problems", new { id = ViewBag.ProblemId})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
